{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:recommended", ":automergeMinor"],
  rangeStrategy: "bump",
  ignoreDeps: ["python"],
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: [".github/workflows/*.y*ml"],
      matchStrings: ["--package (?<depName>@?[^@]+)@(?<currentValue>\\d+)"],
      datasourceTemplate: "npm",
      extractVersionTemplate: "^(?<version>v\\d+).*",
    },
  ],
  packageRules: [
    {
      matchPackageNames: ["actions/node-versions"],
      extractVersion: "^(?<version>v\\d+).*",
    },
  ],
}
